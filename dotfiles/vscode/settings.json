{
  "editor.tabSize": 2,
  "editor.fontSize": 16,
  "editor.fontFamily": "'NotoMono Nerd Font', 'MesloLGS NF'",
  "editor.fontLigatures": false,

  "workbench.colorTheme": "TheCodeTheme Dark",
  "workbench.iconTheme": "catppuccin-mocha",

  "window.titleBarStyle": "native",
